<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--全屏主题-->
    <style name="AppTheme.Full" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash页主题 -->
    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- washer页主题 -->
    <style name="AppTheme.Washer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_washer</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_washer</item>
        <item name="colorAccent">@color/colorAccent_washer</item>
    </style>

</resources>
